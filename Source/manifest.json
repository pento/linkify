{
	"manifest_version": 2,
	"name": "Linkify",
	"version": "0.2",
	"description": "Automatically transform pasted URLs into links.",
	"icons":
	{
		 "16": "linkify-ico-16.png",
		 "48": "linkify-ico-48.png",
		"128": "linkify-ico-128.png"
	},
	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	]
}

