{
  "name": "Linkify",
  "version": "0.6.2",
  "description": "Automatically transform pasted URLs into links.",
  "repository": "pento/linkify",
  "license": "GPL-3.0+",
  "engines": {
    "node": "7.0.0",
    "npm": "3.10.8"
  },
  "scripts": {
    "build": "mkdir -p ./build/prod && webpack --config ./webpack/webpack.config.prod.js && cp ./build/$npm_package_name-$npm_package_version.crx ./dist/$npm_package_name.crx && cp ./build/$npm_package_name-$npm_package_version-an+fx.xpi ./dist/$npm_package_name.xpi",
    "start": "mkdir -p ./build/dev && webpack --config ./webpack/webpack.config.dev.js",
    "lint": "eslint src/js/",
    "test": "mocha-webpack --watch --webpack-config ./webpack/webpack.config.test.js \"src/js/**/*.spec.js\"",
    "test:ci": "mocha-webpack --webpack-config ./webpack/webpack.config.test.js \"src/js/**/*.spec.js\"",
    "travis": "npm run lint && npm run test:ci"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.1",
    "babel-plugin-module-resolver": "2.7.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "copy-webpack-plugin": "4.0.1",
    "crx-webpack-plugin": "0.1.5",
    "eslint": "4.4.1",
    "eslint-config-wpcalypso": "0.8.0",
    "eslint-plugin-react": "7.2.1",
    "eslint-plugin-wpcalypso": "3.4.1",
    "generate-json-webpack-plugin": "0.2.2",
    "lodash": "4.17.4",
    "mocha": "3.5.0",
    "mocha-webpack": "0.7.0",
    "webpack": "3.5.5",
    "webpack-node-externals": "1.6.0",
    "webpack-webext-plugin": "rpl/webpack-webext-plugin",
    "zip-webpack-plugin": "2.0.0"
  },
  "export-symbol": "extensionLinkify.exports"
}
